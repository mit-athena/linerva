#!/bin/bash

list_bad_setuid () {
  find / -xdev -type f -perm +4000 -print 2> /dev/null \
   | fgrep -xvf /dev/fd/3 3<<EOF
#for pyhesiodfs
/usr/bin/fusermount
#for athmode
/usr/bin/schroot
#network utilities
/usr/bin/traceroute.lbl
/usr/bin/traceroute6
/usr/bin/mtr
/bin/ping6
/bin/ping
EOF
}

list_bad_setgid () {
  find / -xdev -type f -perm +2000 \
    -not -group mit -not -group games -print 2> /dev/null \
   | fgrep -xvf /dev/fd/3 3<<EOF
#for attachtab
/usr/bin/quota.debathena
/bin/attach
EOF
}

case "$1" in
  --list|"")
    found=""
    setuid="$(list_bad_setuid)"
    setgid="$(list_bad_setgid)"
    if [ -n "$setuid" ]; then
        echo "Unexpected setuid files:"
        ls -l $(list_bad_setuid)
        echo
        found=1
    fi
    if [ -n "$setgid" ]; then
        echo "Unexpected setgid files:"
        ls -l $(list_bad_setgid)
        echo
        found=1
    fi
    if [ -n "$found" ]; then
        echo "Run $0 --clean to fix these."
    fi
  ;;

  --clean)
    setuid="$(list_bad_setuid)"
    setgid="$(list_bad_setgid)"
    if [ -n "$setuid" ]; then
        echo "Unexpected setuid files:"
        ls -l $setuid
        echo
        chmod u-s $setuid
    fi

    if [ -n "$setgid" ]; then
        echo "Unexpected setgid files:"
        ls -l $setgid
        echo
        chmod g-s $setgid
    fi
  ;;

  *)
    echo "Huh?  Try --list or --clean." >&2
    exit 2
  ;;
esac
